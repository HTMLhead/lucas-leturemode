{
  "manifest_version": 3,

  "name": "루카스 확장프로그램",
  "description": "OPEN상태의 스텝과 하위스텝만 보여준다.",
  "version": "2.0",

  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_icon": "image/Lucas.png"
  },
  "host_permissions": [
    "https://lucas.codesquad.kr/*",
    "http://localhost:4000/*",
    "https://beta.lucas.codesquad.kr/*"
  ],
  "permissions": ["scripting"]
}
